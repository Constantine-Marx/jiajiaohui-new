{
  "root": true,
  "extends": ["taro/react", "plugin:@typescript-eslint/recommended-type-checked"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": true
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "jsx-quotes": [
      2,
      "prefer-double"
    ],
    "@typescript-eslint/no-unsafe-assignment": "off",
    "@typescript-eslint/naming-convention": [
      "warn",
      {
        "selector": "function",
        "modifiers": ["exported"],
        "format": ["PascalCase"]
      }
    ]
  }
}
